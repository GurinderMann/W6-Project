@model Pizzeria.Models.T_Utenti
@{
    ViewBag.Title = "login";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<body class="bg">
  

    <div class=" mt-5">
   
        <div class="card w-25 shadow">
            <div class="card-body">
                <h2 class="mb-4">Esegui il Login </h2>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control mt-1", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required", type = "password" })
                    </div>

                    <button type="submit" class="btn btn-warning mt-3">Login</button>
                    <a href="@Url.Action("Registrati", "Login")" class="btn btn-outline-danger mt-3">Registrati</a>
                }
            </div>
        </div>
    </div>
</body>
