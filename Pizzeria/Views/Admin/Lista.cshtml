@model IEnumerable<Pizzeria.Models.T_Ordine>
@{
    ViewBag.Title = "Lista ";
}

<div class="container mt-4">
    <h2 class="text-center">Lista degli Ordini in Sospeso</h2>

    <table class="table table-bordered table-striped text-center table-hover mx-auto w-75">
        <thead class="thead-dark ">
            <tr>
                <th scope="col">Numero Ordine</th>
                <th scope="col">Data Ordine</th>
                <th scope="col">Ordine evaso</th>
                <th scope="col">Modifica</th>
                <th scope="col">Elimina</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ordine in Model)
            {
                <tr>
                    <td>@ordine.IdOrdine</td>
                    <td>@ordine.DataOrdine</td>
                    <td>

                        @if (ordine.Evaso.HasValue && ordine.Evaso.Value)
                        {
                            <input type="checkbox" checked disabled />
                        }
                        else
                        {
                            <input type="checkbox" disabled />
                        }
                    </td>

                    <td>
                        <a href="@Url.Action("ModificaOrdine", new { id = ordine.IdOrdine })" class="btn btn-outline-warning">Modifica</a>

                    </td>
                    <td>
                        <a href="@Url.Action("EliminaOrdine", new { id = ordine.IdOrdine })" class="btn btn-outline-danger">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
